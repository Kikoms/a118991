# 伺服器設定
PORT=3000
NODE_ENV=development

# 資料庫設定
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=email_system
DB_PORT=3306

# JWT 密鑰
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# 郵件伺服器設定 (預設 SMTP)
DEFAULT_SMTP_HOST=mail.2kez.xyz
DEFAULT_SMTP_PORT=465
DEFAULT_SMTP_SECURE=true
DEFAULT_SMTP_USER=admin@yourdomain.com
DEFAULT_SMTP_PASS=你的密碼或應用程式密鑰

# 臨時信箱設定
TEMP_EMAIL_DOMAIN=2kez.xyz
MAX_TEMP_EMAILS_PER_DAY=5
TEMP_EMAIL_EXPIRE_MINUTES=10

# 檔案上傳設定
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads/attachments

# 前端 URL
FRONTEND_URL=http://localhost:3000
